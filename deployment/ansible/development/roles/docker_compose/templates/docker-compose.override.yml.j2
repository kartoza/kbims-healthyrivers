# Specific configuration for development environment


# Exactly the same as production but for dev env, we expose the port and uses
# different port for the web.
version: '2'
services:

  db:
    volumes:
      - ./pg/postgres_data:/var/lib/postgresql
      - ./backups:/backups
      - ./sql:/sql

  {% if 'db' in docker_port_forward.django %}

    ports:
      - "{{ docker_port_forward.django.db }}:5432"

  {% endif %}

  {% if 'elastic_search' in docker_port_forward.django %}

  elasticsearch:
    ports:
      - "{{ docker_port_forward.django.elastic_search }}:9200"

  {% endif %}

  dbbackups:
    volumes:
      - ./backups:/backups

  btsync-db:
    environment:

      {% for key, value in btsync_db.environment.items() %}

      - {{ key }}={{ value }}

      {% endfor %}

  btsync-media:
    environment:

      {% for key, value in btsync_media.environment.items() %}

      - {{ key }}={{ value }}

      {% endfor %}

  geoserver:
    environment:

      {% for key, value in geoserver.environment.items() %}

      - {{ key }}={{ value }}

      {% endfor %}

  uwsgi:
    build:
      context: docker
      dockerfile: Dockerfile-dev

    {% if 'command' in django %}

    command: {{ django.command }}

    {% endif %}

    environment:

      {% for key, value in django.environment.items() %}

      - {{ key }}={{ value }}

      {% endfor %}

      {% for key, value in geonode.environment.items() %}

      - {{ key }}={{ value }}

      {% endfor %}

    volumes:
      - ../src/healthyrivers/django_project:/home/web/django_project
      - ./static:/home/web/static:rw
      - ./media:/home/web/media:rw
      - ./geonode_backup:/data
      - ./logs:/var/log/
      - ../.pycharm_helpers:/root/.pycharm_helpers
    ports:
      # for ssh
      - "{{ docker_port_forward.django.ssh }}:22"
      # for karma tests
      - "{{ docker_port_forward.django.karma_tests }}:9876"

  web:

    {% if 'command' in web %}

    command: {{ web.command }}

    {% endif %}

    volumes:
      - ./production/nginx_conf/sites-available:/etc/nginx/sites-available:ro
      # I dont use volumes_from as I want to use the ro modifier
      - ./static:/home/web/static:ro
      - ./media:/home/web/media:ro
      - ./logs:/var/log/nginx
    ports:
      # for django test server
      - "{{ docker_port_forward.web.http }}:80"
